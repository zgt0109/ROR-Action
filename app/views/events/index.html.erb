<ul>
  <% @events.each do |event| %>
    <li>
      <%= event.name %>
      <%= link_to "Show", :controllers => 'events', :action => 'show', :id => event %>
      <%= link_to "Edit", :controllers => 'events', :action => 'edit', :id => event %>
      <%= link_to "Delete", :controllers => 'events', :action => 'destroy', :id => event %>
    </li>
  <% end %>
</ul>
<%= paginate @events %>
<%= link_to "New Event", :controllers => 'events', :action => 'new' %>
